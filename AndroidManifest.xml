<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhinav.freshtomatoes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.abhinav.freshtomatoes.MainActivity"
            android:label="Fresh Tomatoes" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.abhinav.freshtomatoes.MovieListActivity"
            android:label="Movie List" >
        </activity>
        
        <activity
            android:name="com.abhinav.freshtomatoes.MovieItemActivity"
            android:label="Movie" >
        </activity>
    </application>

</manifest>
